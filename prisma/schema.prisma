generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id    Int        @id @default(autoincrement())
  name  String     @unique
  items FoodItem[]
}

model FoodItem {
  id              Int      @id @default(autoincrement())
  name            String
  volume          Float
  volumeUnit      String   @default("g")
  dateAdded       DateTime @default(now())
  expiryDate      DateTime
  daysUntilExpiry Int
  status          String
  notes           String?
  categoryId      Int
  category        Category @relation(fields: [categoryId], references: [id])

  @@index([daysUntilExpiry])
  @@index([status])
  @@index([expiryDate])
}
